<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#0097a7</item>
        <item name="colorPrimaryDark">#006978</item>
        <item name="colorAccent">#00897b</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="BackStack">
        <item name="android:clickable">true</item>
        <item name="android:src">@drawable/ripple_keyboard_backspace</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextTitle">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">@dimen/text_title_size</item>
    </style>

    <style name="BaseButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="colorButtonNormal">#4db6ac</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_buttons_size</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ButtonMain">
        <item name="android:textSize">@dimen/text_buttons_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimaryDark">#006978</item>
    </style>

    <style name="MyColorActionBar"></style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/TitleBarTextColor</item>
        <item name="android:background">#344955</item>
    </style>

    <style name="TitleBarTextColor" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#c9cbcc</item>
    </style>
</resources>

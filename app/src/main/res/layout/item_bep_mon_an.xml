<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/bg_bep_mon_an"
    android:layerType="software"
    android:orientation="vertical"
    android:padding="4dp"
    android:paddingBottom="4dp">

    <LinearLayout
        android:id="@+id/lln_bep_mon_an"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_bep_ten_mon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sadasd: "
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_bep_so_luong_mon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="ewrwr"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_mon_dang_che_bien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_cooking" />

        <ImageView
            android:id="@+id/img_mon_da_xong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_salver" />

        <ImageView
            android:id="@+id/img_mon_goi_phuc_vu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_alarm" />
    </LinearLayout>
</LinearLayout>
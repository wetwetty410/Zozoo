<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_order_list_ten_mon_an"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:textSize="@dimen/text_list_titles_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_order_list_gia_tien"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:textSize="@dimen/text_note_size"
        android:textStyle="italic" />

    <TextView
        android:visibility="gone"
        android:id="@+id/txt_order_list_don_vi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/img_order_giam_so_luong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@drawable/ic_remove_gray_24dp" />

    <TextView
        android:id="@+id/txt_order_list_so_luong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="1"
        android:textSize="@dimen/text_note_size" />

    <ImageView
        android:id="@+id/img_order_tang_so_luong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@drawable/ic_add_gray_24dp" />

    <ImageView
        android:id="@+id/img_order_xoa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:src="@drawable/ic_baseline_delete_gray_24dp" />
</LinearLayout>
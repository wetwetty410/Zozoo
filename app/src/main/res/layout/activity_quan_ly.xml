<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nqt.zozoo.quanly.QuanLyActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tlb_act_quan_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <ImageView
                android:id="@+id/img_quan_ly_backstack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_backspace"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txt_quan_ly_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_tai_khoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/button"
            android:drawableStart="@drawable/ic_edit_black_24dp"
            android:paddingEnd="40dp"
            android:paddingLeft="30dp"
            android:text="Tài Khoản"
            android:textAllCaps="false"
            android:textColor="#c93131"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_so_do_phong_ban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/button"

            android:drawableStart="@drawable/ic_edit_black_24dp"
            android:paddingEnd="40dp"
            android:paddingLeft="30dp"
            android:text="Tầng,Bàn"
            android:textAllCaps="false"
            android:textColor="#c93131"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_quan_ly_nhom_mon_an"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/button"

            android:drawableStart="@drawable/ic_edit_black_24dp"
            android:paddingEnd="40dp"
            android:paddingLeft="30dp"
            android:text="Nhóm Món Ăn"
            android:textAllCaps="false"
            android:textColor="#c93131"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_quan_ly_mon_an"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/button"
            android:drawableStart="@drawable/ic_edit_black_24dp"
            android:paddingEnd="40dp"
            android:paddingLeft="30dp"

            android:text="Món Ăn, Đồ Uống"
            android:textAllCaps="false"
            android:textColor="#c93131"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>
